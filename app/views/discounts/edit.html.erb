<h1>Edit Discount: <%= @discount.id %></h1>

<p>Quantity Threshold: <%= @discount.quantity_threshold %></p>
<p>Percentage Discount: <%= @discount.percentage_discount %></p>

<%= form_with model: @discount, url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |f| %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %>
  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount %>
  <%= f.submit "Submit" %>
<% end %>